<!DOCTYPE html>
<html lang="en">
<head>
    <title>Gamify</title>
    <link rel="stylesheet" type="text/css" href="../../Gamify.css">
</head>
<body>
    <header class="hsudoku">
        <%- include('./header') %>
        <div class="setup-game">
            <div id="diff">
                <label><input id="diff-easy" type="radio" name="diff" value="easy" checked>Easy</label>
                <label><input id="diff-medium" type="radio" name="diff" value="medium">Medium</label>
                <label><input id="diff-hard" type="radio" name="diff" value="hard">Hard</label>
            </div>
            <div id="time">
                <label><input id="time-1" type="radio" name="time" value="Three" checked>3 Min</label>
                <label><input id="time-2" type="radio" name="time" value="Five" checked>5 Min</label>
                <label><input id="time-3" type="radio" name="time" value="Ten" checked>10 Min</label>
            </div>
        </div>
        <div id="start-btn">
            <button>Start Game</button>
        </div>
    </header>
    <hr class="section-divider-1">
    <div id="status">
        <p id="timer"></p>
        <p id="lives"></p>
    </div>
    <div class="game">
        <div id="board"></div>
        <div id="number-container" class="hidden">
            <p id="one">1</p>
            <p id="two">2</p>
            <p id="three">3</p>
            <p id="four">4</p>
            <p id="five">5</p>
            <p id="six">6</p>
            <p id="seven">7</p>
            <p id="eight">8</p> 
            <p id="nine">9</p>
        </div>
    </div>
</body>
<script src="./sudoku.js"></script>
</html>